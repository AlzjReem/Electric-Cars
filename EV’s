    <script>
        document.getElementById("calculateJourney").addEventListener("click", function() {
            const destinations = {
                "Sharjah to Makkah": 1800,
                "Sharjah to Doha": 700,
                "Sharjah to Manama": 900,
                "Sharjah to Kuwait City": 1300,
                "Sharjah to Washington, DC": 13000,
                "Sharjah to Muscat": 450
            };

            const E_battery = 75; // kWh
            const C_motor = 15; // kWh per 100 km
            const averageSpeed = 100; // km/h
            const regenerativeBrakingEfficiency = 0.6; // 60%

            // Energy consumption calculation
            const calculateEnergy = (distance) => {
                const baseEnergy = (distance / 100) * C_motor;
                const totalEnergy = baseEnergy * (1 - regenerativeBrakingEfficiency);
                const remainingEnergy = E_battery - totalEnergy;
                const needsCharge = remainingEnergy < 0;

                return { totalEnergy, remainingEnergy, needsCharge };
            };

            // Estimated time of travel
            const calculateTime = (distance) => distance / averageSpeed;

            // Populate journey results
            const journeyResults = document.getElementById("journeyResults");
            journeyResults.innerHTML = ''; // Clear previous results
            const selectedDestination = document.getElementById("destination").value;
            const distance = destinations[selectedDestination];
            
            const { totalEnergy, remainingEnergy, needsCharge } = calculateEnergy(distance);
            const travelTime = calculateTime(distance);
            
            const listItem = document.createElement("li");
            listItem.innerHTML = `<strong>${selectedDestination}</strong>: 
                Total Distance: ${distance} km,
                Estimated Time: ${travelTime.toFixed(2)} hours, 
                Total Energy Consumption: ${totalEnergy.toFixed(2)} kWh, 
                Remaining Energy: ${remainingEnergy.toFixed(2)} kWh 
                ${needsCharge ? ', Additional charging needed.' : ''}`;
            journeyResults.appendChild(listItem);
        });
    </script>
